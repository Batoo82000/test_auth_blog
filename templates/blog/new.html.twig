{% extends 'base.html.twig' %}

{% block title %}Ajouter des articles au blog{% endblock %}

{% block body %}

    <div class="container">
    
        <h1 class="mt-4">
            Ajouter un nouvel article
        </h1>

        <div class="row">

        {{ form_start(form) }}
        {{ form_row(form.title)}}
        {{ form_row(form.content)}}
        {{ form_row(form.category)}}
        {{ form_row(form.author)}}
        {{ form_row(form.online)}}
     
        <button type="submit" class="btn btn-primary mt-4 mb-4">Ajouter l'article</button>

        {{ form_end(form) }}

        </div>

    </div>

{% endblock %}